<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Major 'player' but never played in the WC "
            android:textSize="18dp"/>

        <CheckBox
            android:id="@+id/Bangladesh_checkbox"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="Bangladesh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingBottom="16dp"

            />

        <CheckBox
            android:id="@+id/India_checkbox"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="India"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingBottom="16dp"

            />

        <CheckBox
            android:id="@+id/Syria_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="Syria"
            android:layout_marginLeft="16dp"
            android:paddingBottom="16dp"
            />

        <CheckBox
            android:id="@+id/Pakistan_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_marginLeft="16dp"
            android:paddingBottom="16dp"
            android:text="Pakistan"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sialkot city produces 40% of the Worlds soccer balls since 1982 with over 100 firms working there"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"


        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Q"
                android:onClick="buttonclick"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:id="@+id/imgSmiley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <Button
                android:id="@+id/CheckAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer is ..."
                android:onClick="buttonclick"


                />

        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/footballswc"
            android:scaleX="1.1"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>