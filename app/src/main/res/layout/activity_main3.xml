<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="There was a non football related impact in Germany after the 2006 World Cup"
            android:textSize="18dp"/>

        <CheckBox
            android:id="@+id/Germany_cup_checkbox"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="Germany won the cup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingBottom="16dp"

            android:onClick="onCheckboxClicked"

            />

        <CheckBox
            android:id="@+id/Crime_incr_checkbox"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="7% Increase in Crime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingBottom="16dp"
            android:onClick="onCheckboxClicked"

            />

        <CheckBox
            android:id="@+id/birth_rate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="Birth rate increase > 10%"
            android:layout_marginLeft="16dp"
            android:paddingBottom="16dp"
            android:onClick="onCheckboxClicked"
            />

        <CheckBox
            android:id="@+id/migrant_crisis_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_marginLeft="16dp"
            android:paddingBottom="16dp"
            android:text="Beginning of the migrant crisis"
            android:onClick="onCheckboxClicked"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Germany's tourism industry earned an extra $399 million in revenue after the WC, it added 2 billion euros to retail sales and yielded 50,000 new jobs. Ticket sales added 40 million euros into the treasury"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Q"
                android:onClick="buttonclick"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:id="@+id/imgSmiley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <Button
                android:id="@+id/CheckAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer is ..."
                android:onClick="buttonclick"


                />

        </RelativeLayout>







        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/germany2006"
            android:scaleX="1.5"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>